@model Parcial_MilagrosPeyretti.Models.Competidor

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar</h1>

<h4>Competidor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDisciplina" class="control-label"> Disciplina </label>
                <select asp-for="IdDisciplina" class="form-control">
                    <option value=""> Seleccione una opción </option>
                    @{
                        foreach (var item in ViewBag.ListaDisciplinas)
                        {
                            <option value="@item.Id">@item.NombreDisciplina</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdDisciplina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edad" class="control-label"></label>
                <input asp-for="Edad" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuidadRecidencia" class="control-label"> Ciudad de recidencia </label>
                <input asp-for="CuidadRecidencia" class="form-control" />
                <span asp-validation-for="CuidadRecidencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
